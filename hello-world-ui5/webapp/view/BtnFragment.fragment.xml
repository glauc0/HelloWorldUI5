<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Dialog
        id="fragmentDialog"        
        title="{i18n>fragmentTitle}" >
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="2rem"
                class="sapUiSmallMargin" />
        </content>
        <beginButton>
            <Button
                text="{i18n>btnCloseFragment}"
                press="btnCloseFragmentClick" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>